# 증권사 선택: kis (한투, 기본) / kiwoom (키움) / hybrid (국내=키움, 해외=한투)
BROKER=kis

# 한국투자증권 API 설정 (BROKER=kis 또는 hybrid 시 필요)
# 실전투자
KIS_APP_KEY=your_app_key_here
KIS_APP_SECRET=your_app_secret_here
KIS_ACCOUNT_NO=12345678-01

# 모의투자 (선택)
KIS_PAPER_APP_KEY=
KIS_PAPER_APP_SECRET=
KIS_PAPER_ACCOUNT_NO=

# 키움증권 API 설정 (BROKER=kiwoom 또는 hybrid 시 필요)
KIWOOM_APP_KEY=
KIWOOM_APP_SECRET=
KIWOOM_ACCOUNT_NO=

# 투자 모드: live (실전) / paper (모의)
TRADING_MODE=paper

# 텔레그램 봇 설정
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# 매매 설정
# 총 투자 한도 (원). 0이면 계좌 총평가액 기준
# 투자금에 따라 종목수 자동 결정: ~1천만(2종목), ~3천만(3), ~5천만(5), ~1억(7), 1억+(10)
TOTAL_BUDGET=10000000
STOP_LOSS_PCT=5.0
TAKE_PROFIT_PCT=10.0
MAX_DAILY_TRADES=20
# 달러/원 환율 (해외 주식 수량 계산용)
USD_KRW_RATE=1450

# 트레일링 스탑
TRAILING_ACTIVATION_PCT=3.0
TRAILING_STOP_PCT=2.0

# 포트폴리오 리스크
DAILY_MAX_LOSS_PCT=3.0
CONSECUTIVE_LOSS_LIMIT=3
CONSECUTIVE_LOSS_COOLDOWN=60

# 지정가 주문
LIMIT_ORDER_ENABLED=true
LIMIT_BUY_OFFSET_PCT=0.3
LIMIT_TP_OFFSET_PCT=0.3
LIMIT_ORDER_TIMEOUT_SEC=300

# 분할 매수/매도
SPLIT_BUY_ENABLED=true
SPLIT_BUY_FIRST_RATIO=0.5
SPLIT_BUY_DIP_PCT=2.0
SPLIT_SELL_ENABLED=true
SPLIT_SELL_FIRST_RATIO=0.5

# 감시 종목 (쉼표 구분)
WATCH_STOCKS_KR=005930,000660,035420
WATCH_STOCKS_US=AAPL,MSFT,NVDA

# AI 전략 설정
AI_STRATEGY_ENABLED=true
AI_PROVIDER=gemini
# Google Gemini (무료): https://aistudio.google.com/apikey 에서 발급
GEMINI_API_KEY=your_gemini_api_key
# Anthropic Claude (유료, 선택): https://console.anthropic.com 에서 발급
CLAUDE_API_KEY=
# OpenAI GPT (유료, 선택): https://platform.openai.com 에서 발급
OPENAI_API_KEY=
# AI 모델 (비어있으면 provider별 기본값 사용)
# gemini: gemini-2.0-flash / claude: claude-haiku-4-5-20250514 / openai: gpt-4o-mini
AI_MODEL=
